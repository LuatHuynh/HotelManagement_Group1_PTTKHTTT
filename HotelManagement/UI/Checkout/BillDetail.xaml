<UserControl x:Class="HotelManagement.UI.Checkout.BillDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelManagement.UI.Checkout"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="530" d:DesignWidth="1200">
    <Grid HorizontalAlignment="Right" Width="1200">
        <StackPanel VerticalAlignment="Top" Height="40">
            <Label Content="Room Information" FontSize="20"></Label>
            <ListView x:Name="RoomsChoosenListView" 
                      Height="375"
                      ScrollViewer.CanContentScroll="False"
                      Background="Transparent"
                      BorderThickness="0.3 0 0 0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Room ID" Width="120" ></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
