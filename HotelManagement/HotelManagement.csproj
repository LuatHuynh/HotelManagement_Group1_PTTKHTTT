<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\font\Dosis.ttf" />
    <None Remove="resources\Icons\cross.png" />
    <None Remove="resources\Icons\detail.png" />
    <None Remove="resources\Icons\reception.png" />
    <None Remove="resources\Icons\search.png" />
    <None Remove="resources\Icons\update.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\font\Dosis.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="resources\Icons\detail.png" />
    <Resource Include="resources\Icons\reception.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Repositories\" />
    <Folder Include="Services\" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\Icons\cross.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="resources\Icons\search.png" />
    <Resource Include="resources\Icons\update.png" />
  </ItemGroup>

</Project>
